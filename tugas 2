    <!-- Tombol interaktif -->
    <button onclick="showJapaneseTime()">🕒 Tampilan Waktu di 日本</button>

    <!-- Menampilkan waktu Jepang -->
    <div id="time-box"></div>

    <script>
        function showJapaneseTime() {
            const timeBox = document.getElementById('time-box');
            const options = {
                timeZone: 'Asia/Tokyo',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                day: '2-digit',
                month: 'long',
                year: 'numeric'
            };
            const jpTime = new Date().toLocaleString('ja-JP', options);
            timeBox.textContent = `現在の日本時間：${jpTime}`;
        }
    </script>
