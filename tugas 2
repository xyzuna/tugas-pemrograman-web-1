        function showJapaneseTime() {
            const timeBox = document.getElementById('time-box');
            const options = {
                timeZone: 'Asia/Tokyo',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                day: '2-digit',
                month: 'long',
                year: 'numeric'
            };
            const jpTime = new Date().toLocaleString('ja-JP', options);
            timeBox.textContent = `ç¾åœ¨ã®æ—¥æœ¬æ™‚é–“ï¼š${jpTime}`;
        }
